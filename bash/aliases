# Grid5K
# Have to figure out a more elegant way for each of the functions
function wjobid {
    local  __resultvar=$1
    local  myresult=$(oargridstat | head -n 1 | cut -d' ' -f 3 | cut -d':' -f 1)
    if [[ $# == 1 ]]; then
	eval $__resultvar="'$myresult'"
    else
	echo "$myresult"
    fi
}

function wlistnodes {
    local jobid=$(wjobid)
    if [[ $jobid == "" ]]; then
	echo "No job running"
    else
    # can the ordering of greps be optimized
	oargridstat -l $jobid | sort | uniq | grep -v '^$'
    fi
}

function wdeljob {
    local jobid=$(wjobid)
    if [[ $jobid == "" ]]; then
	echo "No job running"
    else
    # can the ordering of greps be optimized
	oargriddel $jobid 
    fi
}

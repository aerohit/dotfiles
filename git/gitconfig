[user]
  name = rohit saxena
  email = aerohit.saxena@gmail.com

[merge]
  tool = threesome

[mergetool "threesome"]
  cmd = "gvim -f $BASE $LOCAL $REMOTE $MERGED -c 'ThreesomeInit'"
  trustExitCode = true

[alias]
  st = status
  cm = commit -m
  cam = commit -am
  a = add
  cob = checkout -b
  co = checkout
  aa= !git add -u && git add . && git status
  up = !git fetch origin && git rebase origin/master
  ir = !git rebase -i origin/master
  done = !git fetch && git rebase origin/master && git checkout master && git merge @{-1} && rake && git push

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

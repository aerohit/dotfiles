[alias]
  a    = add
  ap   = add -p
  aa   = add --all
  c    = commit
  cm   = commit -m
  cam  = commit -am
  co   = checkout
  cob  = checkout -b
  d    = diff
  dc   = diff --cached
  p    = push
  lg   = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
  s    = status

[color]
  branch = auto
  diff   = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old  = red bold
  new  = green bold

[color "status"]
  added     = yellow
  changed   = green
  untracked = cyan

[core]
  excludesfile = /Users/rsaxena/.gitignore_global
  editor       = vim

[github]
	user = aerohit

[filter "media"]
  clean  = git-media-clean %f
  smudge = git-media-smudge %f

[push]
